@using Northwind.Models
@model LoginModel

<h2 class="mt-3"><i class="fas fa-sign-in-alt"></i> Sign In</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Login" method="post">
    <p>Please select your role:</p>
    <div>
        <input type="radio" name="loginRadio" id="customer" value="Customer">
        <label for="customer">Customer</label>
        <input type="radio" name="loginRadio" id="employee" value="Employee">
    Â    <label for="employee">Employee</label><br>
    </div>
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-outline-primary">Sign In</button>
</form>